<div class="mt-5 d-flex justify-content-center align-items-center ">

  <div class="p-4 border rounded-3 shadow W350">
    <div class="text-center">
      <h4 class="fw-bold mb-1"><%= @post.blogger.fullname %></h4>
      <p class="text-muted small">@<%= @post.blogger.username %></p>
    </div>
    <hr class="m-2">

    <div class="the-post p-3 text-center mb-3">
      <p class="m-0"><%= @post.text %></p>
    </div>

    <div class="text-center small text-muted">
      <i class="bi bi-clock"></i>
      <span class="ms-2">
        <%= I18n.l(@post.created_at, format: :custom) %>
      </span>
    </div>

  </div>
</div>
