<div class="mt-5 d-flex justify-content-center align-items-center ">

  <div class="p-4 border rounded-3 shadow  w-100 MW400">
    <div class="text-center mb-3">
      <h4 class="fw-bold mb-1"><%= @post.blogger.fullname %></h4>
      <p class="text-muted small">@<%= @post.blogger.username %></p>
    </div>

    <div class="the-post p-3 text-center mb-3 border rounded bg-light">
      <p class="m-0"><%= @post.text %></p>
    </div>

    <div class="d-flex justify-content-between align-items-center text-muted small">
      <%= render  "layouts/posts/show_buttons", post: @post %>
    </div>

  </div>
</div>
