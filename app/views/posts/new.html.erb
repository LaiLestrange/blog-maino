<div class="mt-5 d-flex justify-content-center align-items-center ">

  <div class="p-4 border rounded-3 shadow MW400">
    <div class="text-center mb-4">
      <h2><%= I18n.t("app.new_post") %></h2>
    </div>

    <div class="mb-4 new-post-form ">
      <%= form_with model: @post do |f|%>
        <div class="field mb-2">
          <%= f.label :text, class: "col-form-label-sm" %>
          <%= f.text_area :text, autofocus: true, class: "form-control form-control-sm" %>
        </div>

        <div class="mt-3 text-center actions">
          <%= f.submit I18n.t("app.submit"), class: "btn btn-secondary btn-sm" %>
        </div>



      <% end %>


    </div>

  </div>
</div>
