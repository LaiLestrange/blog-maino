<div class="mb-4 p-4 border rounded-3 shadow-sm w-100 d-flex flex-column justify-content-between feed-post feed-post-<%= post.id %>">
  <div class="mb-3 d-flex justify-content-between align-items-center">
    <div>
      <h5 class="fw-semibold m-0"><%= post.blogger.fullname %></h5>
      <p class="text-muted small m-0">@<%= post.blogger.username %></p>
    </div>
    <div class="d-flex gap-2 align-items-center text-muted small">
      <% if post.edited? %>
        <%= render  "layouts/posts/icon_edited_time", post: post %>
      <% end %>
      <%= render  "layouts/posts/icon_created_time", post: post %>
    </div>
  </div>
  <div class="the-post p-3  rounded ">
    <p class="m-0"><%= post.text %></p>
  </div>
</div>
