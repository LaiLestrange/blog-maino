<div class="mt-5 d-flex justify-content-center align-items-center ">

  <div class="p-4 border rounded-3 shadow MW400">
    <div class="text-center mb-4">
      <h2><%= I18n.t("devise.registrations.new.new_sign_up") %></h2>
    </div>

    <div class="mb-4 sign-up-form ">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field mb-2">
          <%= f.label :email, class: "col-form-label-sm" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
        </div>

        <div class="mb-2 gap-3 d-flex align-items-center justify-content-between">
          <div class="field mb-2">
            <%= f.label :fullname, class: "col-form-label-sm" %>
            <%= f.text_field :fullname, class: "form-control form-control-sm" %>
          </div>

          <div class="field mb-2">
            <%= f.label :username, class: "col-form-label-sm" %>
            <%= f.text_field :username, class: "form-control form-control-sm" %>
          </div>
        </div>

        <div class="mb-2 gap-3 d-flex align-items-center justify-content-between">
          <div class="field mb-2">
            <%= f.label :password, class: "col-form-label-sm"  %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
          </div>

          <div class="field mb-2">
            <%= f.label :password_confirmation, class: "col-form-label-sm" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
          </div>
        </div>

        <div class="mt-3 text-center actions">
          <%= f.submit I18n.t("devise.registrations.new.sign_up"), class: "btn btn-secondary btn-sm" %>
        </div>

        <%= render "devise/shared/error_messages", resource: resource %>
      <% end %>
    </div>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
